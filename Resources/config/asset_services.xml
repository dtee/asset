<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

	<parameters>
		<parameter key="asset.asset_twig_extension.class">Odl\AssetBundle\Twig\Extension\AssetExtension</parameter>
		<parameter key="asset.asset_manager.class">Odl\AssetBundle\Asset\YAMLAssetManager</parameter>
		<parameter key="asset.asset_manager.assets">%kernel.root_dir%/config/assets.yml</parameter>
		<parameter key="asset.form_errors">Odl\AssetBundle\Form\AjaxErrorProvider</parameter>
	</parameters>
	
    <services>
    	<!-- Register asset extension so that user could use jumbo filter -->
        <service id="twig.extension.asset" class="%asset.asset_twig_extension.class%" public="false" >
            <tag name="twig.extension" />
            <argument type="service" id="asset.asset_manager" />
            <argument type="service" id="templating.helper.assets" strict="false" />
            <argument>%kernel.debug%</argument>
        </service>
        
        <service id="asset.asset_manager" class="%asset.asset_manager.class%" public="true">
			<argument type="service" id="kernel" />
			<argument type="service" id="router" />
            <argument>%asset.asset_manager.assets%</argument>
        </service>
        
        <service id="form.errors" class="%asset.form_errors%" public="true">
        	<argument type="service" id="translator" />
        </service>
    </services>
</container>
