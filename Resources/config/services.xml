<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

	<parameters>
		<parameter key="asset.asset_twig_extension.class">Odl\AssetBundle\Twig\Extension\AssetExtension</parameter>
		<parameter key="asset.asset_manager.class">Odl\AssetBundle\Asset\YAMLAssetManager</parameter>
		<parameter key="asset.asset_manager.packages">%kernel.root_dir%/config/assets.yml</parameter>
	</parameters>
	
    <services>
    	<!-- Register asset extension so that user could use jumbo filter -->
        <service id="twig.extension.acme.asset" class="%asset.asset_twig_extension.class%" public="false">
            <tag name="twig.extension" />
            <argument type="service" id="service_container" />
        </service>
        
        <service id="asset.asset_manager" class="%asset.asset_manager.class%">
			<argument type="service" id="kernel" />
            <argument>%assetic.yaml_asset_manager.packages%</argument>
        </service>
    </services>
</container>
